{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami": "ami-8827efe0",
      "instance_type": "r3.large",
      "ssh_username": "ubuntu",
      "ami_name": "es-base-{{timestamp}}",
      "ami_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "delete_on_termination": true,
          "volume_size": 15,
          "volume_type": "gp2"
        },
        {
          "device_name": "/dev/sdf",
          "delete_on_termination": true,
          "volume_size": 85,
          "volume_type": "gp2"
        }
      ],
      "tags": {
        "OS_Version": "Ubuntu",
        "Release": "14.04",
        "Name": "es-base",
        "Ansible_Version": "Latest",
        "es-version": "1.3.2",
        "Instance_Type" : "r3.large",
        "Virtualisation": "hvm"
      }
    }
  ],

  "provisioners": [
    {
      "type": "file",
      "source": "provisioners/files/ephemeral-mount.sh",
      "destination": "ephemeral-mount"
    },
    {
      "type": "shell",
      "script": "provisioners/mount-ephemeral.sh"
    }
  ]
}
